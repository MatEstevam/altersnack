<div class="container">
  <div class="row py-4">
    <div class="col-md-3"></div>
    <div class="col">
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <ul class="list-unstyled">
        <li>Issued on: <strong> <%= @order.created_at.to_date %></li></strong>
        <li>Total: <strong><%= humanized_money_with_symbol @order.amount %></li></strong>
        </li>
      </ul>
      <p>Estimated delivery in <strong>40-60 min</strong></p>
    </div>
  </div>
</div>
