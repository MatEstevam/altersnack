<div class="container">
  <h1>Seu Carrinho de Compras</h1>

  <% if @cart.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @cart.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @cart.cart_items.any? %>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Preço</th>
            <th>Total</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @cart.cart_items.each do |item| %>
            <tr>
              <td><%= item.product.name %></td>
              <td>
                <%= form_with url: update_quantity_cart_path(item), method: :patch, local: true, class: 'd-flex align-items-center' do |f| %>
                  <%= f.number_field :quantity, value: item.quantity, min: 1, class: 'form-control me-2' %>
                  <%= f.hidden_field :product_id, value: item.product.id %>
                  <%= f.submit 'Atualizar', class: 'btn btn-primary btn-sm' %>
                <% end %>
              </td>
              <td><%= number_to_currency(item.product.price) %></td>
              <td><%= number_to_currency(item.total_price) %></td>
              <td>
                <%= link_to 'Remover', remove_product_cart_path(item), data: {
                      turbo_method: :delete,
                      turbo_confirm: 'Você tem certeza?'
                    }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="3">Total:</td>
            <td><%= number_to_currency(@cart.total_price) %></td>
            <td></td>
          </tr>
        </tfoot>
      </table>
    </div>

    <div class="d-flex justify-content-between mt-3">
      <%= link_to 'Finalizar Compra', new_order_path, class: 'btn btn-primary btn-lg' %>
      <%= link_to 'Voltar ao Restaurante', restaurant_path(@cart.cart_items.first.product.user), class: 'btn btn-secondary btn-lg' %>
    </div>
  <% else %>
    <p>Seu carrinho está vazio.</p>
    <%= link_to 'Voltar ao Restaurante', restaurants_path, class: 'btn btn-secondary btn-lg' %>
  <% end %>
</div>
