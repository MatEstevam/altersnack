<div class="container mt-2">
  <h1>Your Shopping Cart</h1>

  <% if @cart.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @cart.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if @cart.cart_items.any? %>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @cart.cart_items.each do |item| %>
            <tr>
              <td><%= item.product.name %></td>
              <td>
                <%= form_with model: item, url: update_quantity_cart_path(item), method: :patch, local: true, class: 'd-flex align-items-center' do |f| %>
                  <%= f.number_field :quantity, value: item.quantity, min: 1, class: 'form-control me-2' %>
                  <%= f.hidden_field :product_id, value: item.product.id %>
                  <%= f.submit 'Update', class: 'btn btn-primary btn-sm border-radius-lg' %>
                <% end %>
              </td>
              <td><%= number_to_currency(item.product.price) %></td>
              <td><%= number_to_currency(item.total_price) %></td>
              <td>
                <%= link_to remove_from_cart_cart_path(item), method: :delete, data: {
                      action: 'delete-product'
                    }, class: 'btn btn-red btn-sm mr-2 d-flex justify-content-center align-items-center' do %>
                  <i class="fa-solid fa-trash"></i>
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="3">Total:</td>
            <td><%= number_to_currency(@cart.total_price) %></td>
            <td></td>
          </tr>
        </tfoot>
      </table>
    </div>

    <div class="d-flex justify-content-between mt-3">
      <%= link_to 'Checkout', new_order_path, class: 'btn btn-primary btn-lg' %>
      <%= link_to 'Back to Restaurant', restaurant_path(@cart.cart_items.first.product.user), class: 'btn btn-secondary btn-lg' %>
    </div>
  <% else %>
    <p>Your cart is empty.</p>
    <%= link_to 'Back to Restaurants', restaurants_path, class: 'btn btn-secondary btn-lg' %>
  <% end %>
</div>
