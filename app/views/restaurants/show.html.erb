<div class="container show-restaurant">
  <div id="<%= dom_id(@user) %>">
  <div class="rest-info">
    <h1><%= @user.name %></h1>

    <p>
      <strong>Address:</strong>
      <%= @user.address %>
    </p>


  <div class="filters">
    <%= link_to "Gluten Free", restaurant_path(filter: "gluten_free"), class: 'btn btn-circle mr-2' %>
    <%= link_to "Dairy Free", restaurant_path(filter: "dairy_free"), class: 'btn btn-circle mr-2' %>
    <%= link_to "Nut Free", restaurant_path(filter: "nut_free"), class: 'btn btn-circle mr-2' %>
    <%= link_to "Soy Free", restaurant_path(filter: "soy_free"), class: 'btn btn-circle mr-2' %>
    <%= link_to "Vegetarian", restaurant_path(filter: "vegetarian"), class: 'btn btn-circle mr-2' %>
    <%= link_to "Vegan", restaurant_path(filter: "vegan"), class: 'btn btn-circle mr-2' %>
  </div>

    <h3>Products</h3>
  </div>
    <ul>
      <% @products.each do |product| %>
        <li>
          <div class="card">
          <%= link_to product_path(product), class: 'card-link' do %>
            <div>
              <% if product.photo.attached? %>
                  <%= image_tag url_for(product.photo), height: 180, width: 180, crop: :fill, class: 'card-img-top' %>
              <% else %>
                <%= image_tag 'default-foto.jpg', height: 180, width: 180, crop: :fill, class: 'card-img-top' %>
              <% end %>
            </div>
            <div class="product-info">
              <strong><%= product.name %></strong>
              <ul>
                <% product.restrictions.each do |restriction|%>
                  <li><%= restriction.name %></li>
                <% end %>
              </ul>
              <strong>R$<%= product.price %></strong>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

    <% if policy(@user).create? %>
      <%= link_to "Insert new product", new_product_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
