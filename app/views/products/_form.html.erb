<%= simple_form_for(product) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :restrictions, as: :check_boxes, collection: ["Gluten-free", "Dairy-Free", "Nut-Free", "Soy-Free", "Vegetarian", "Vegan", "All", "Other"], label_method: :itself, include_hidden: false %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
