<%= simple_form_for(@product) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :restriction_ids, as: :check_boxes, collection: Restriction.all, label_method: :name, value_method: :id %>
  <%= f.input :photo, as: :file, input_html: { multiple: false } %>
  <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
